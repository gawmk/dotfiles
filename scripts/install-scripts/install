#!/bin/bash
#

# before you do all this, make sure to first transfer your ~/.gnupg/, .gitconfig, .authinfo.gpg, .ssh (DO THIS ONLY IF YOU CHANGE MACHINES FOR GOOD AND ERASE THE OLD DISK)

SCRIPTS=""

if [ -f "/etc/debian_version" ]; then

  apt update
  apt install sway waybar adduser alsa-utils cmake git systemd-resolved ledger\
      cmatrix cowsay fd-find fonts-font-awesome fzf wl-clipboard tofi mako-notifier \
      grep grim hostname imv kitty git bluez cron curl fonts-font-awesome gcc\
      neofetch neovim iwd iwgtk rfkill python3 thunderbird gpg-agent imagemagick \
      ripgrep rubber sed slurp sudo swaybg swayidle swaylock syncthing tar \
      unzip usbutils wlsunset zathura zip texlive-full libreoffice pipewire pavucontrol flatpak \
      -y
  
  # setting wlsunset up
  wlsunset -l 50.8 -L 5.6
  echo "wlsunset set!"

  # TO INSTALL:
  # auto-cpufreq, build emacs, ledger
  read -p "Should I install emacs? [y/n]: "
  if [ "$REPLY" == "y" ]; then
      SCRIPTS+="./emacs-build.sh"
  fi

  read -p "Should I install ollama? [y/n]: "
  if [ "$REPLY" == "y" ]; then
      SCRIPTS+=" ./ollama-install.sh"
  fi


  for script in $SCRIPTS; do
      echo $script 
  done
fi
